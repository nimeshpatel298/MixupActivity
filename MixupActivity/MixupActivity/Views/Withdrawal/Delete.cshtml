@model MixupActivity.Models.Withdrawal
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2></h2>
@using (Html.BeginForm())
{
    <div class="panel panel-primary">
        @Html.AntiForgeryToken()
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-4">
                    Are you sure you want to delete this transaction?
                </div>
                <div class="col-lg-offset-6 col-lg-1">
                    @{ MvcHtmlString label = Html.ActionLink("<span class='glyphicon glyphicon-share-alt'></span>Return", "Index", null, new { @class = "btn btn-info btn-md" }); }
                    @Html.Raw(HttpUtility.HtmlDecode(label.ToString()))
                </div>
            </div>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Person.LoginId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Person.LoginId)
                </dd>
               
                <dt>
                    @Html.DisplayNameFor(model => model.Amount)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Interest)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Interest)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.TransactionDate)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TransactionDate)
                </dd>
            </dl>
            @*<div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Move to All Transactions", "Index")
                </div>*@
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-1">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
