@model IEnumerable<MixupActivity.Models.Investment>

<h2></h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvestmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvestmentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvestmentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TranscationType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMonthlyRecurrent)
        </th>
        <th>
            @{ MvcHtmlString news = Html.ActionLink("<span class='glyphicon glyphicon-share-alt'></span> New", "Create", "Investment", null, new { @class = "btn btn-info btn-sm" }); }
            @Html.Raw(HttpUtility.HtmlDecode(news.ToString()))
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InvestmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvestmentType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvestmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TranscationType)
        </td>
        <td>
            @if (item.IsMonthlyRecurrent == true)
            {
                @Html.DisplayName("Yes")

            }
            else
            {
                @Html.DisplayName("No")
            }

        </td>
        <td class="d-none d-sm-block">
            @{ MvcHtmlString editS = Html.ActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Investment", new { id = item.InvestmentGuid }, new { @class = "btn btn-info btn-sm" }); }
            @Html.Raw(HttpUtility.HtmlDecode(editS.ToString()))

            @{ MvcHtmlString deleteS = Html.ActionLink("<span class='glyphicon glyphicon-remove'></span>", "Delete", "Investment", new { id = item.InvestmentGuid }, new { @class = "btn btn-info btn-sm" }); }
            @Html.Raw(HttpUtility.HtmlDecode(deleteS.ToString()))
        </td>
        <td class="d-none d-lg-table-cell">
            @{ MvcHtmlString edit = Html.ActionLink("<span class='glyphicon glyphicon-pencil'></span> Edit", "Edit", "Investment", new { id = item.InvestmentGuid }, new { @class = "btn btn-info btn-sm" }); }
            @Html.Raw(HttpUtility.HtmlDecode(edit.ToString()))

            @{ MvcHtmlString delete = Html.ActionLink("<span class='glyphicon glyphicon-remove'></span> Delete", "Delete", "Investment", new { id = item.InvestmentGuid }, new { @class = "btn btn-info btn-sm" }); }
            @Html.Raw(HttpUtility.HtmlDecode(delete.ToString()))
        </td>
    </tr>
    }

</table>
