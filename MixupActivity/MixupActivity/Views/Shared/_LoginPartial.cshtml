@using MixupActivity.CustomAuthentication
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @if (((CustomPrincipal)User).IsAdmin)
            {
                <li>@Html.ActionLink("Approve", "Approve", "Transactions", routeValues: null, htmlAttributes: new { id = "approve" })</li>
            }
            <li>
                @*@Html.Label("Hello " + ((CustomPrincipal)User).PersonName + "!", new { @class = "col-md-2 control-label" })*@
                @Html.ActionLink("Hello " + ((CustomPrincipal)User).PersonName + "!", "Index", "Transactions", routeValues: null, htmlAttributes: null)
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}

