@model MixupActivity.Models.Technology

@{
    ViewBag.Title = "Delete";
}

<h2></h2>
@using (Html.BeginForm())
{
    <div class="panel panel-primary">
        @Html.AntiForgeryToken()
        <div class="panel-heading">
            <div class="row">
                <div class="col-lg-4">
                    Are you sure you want to delete this technology?
                </div>
                <div class="col-lg-offset-6 col-lg-1">
                    @{ MvcHtmlString label = Html.ActionLink("<span class='glyphicon glyphicon-share-alt'></span>Return", "Index", null, new { @class = "btn btn-info btn-md" }); }
                    @Html.Raw(HttpUtility.HtmlDecode(label.ToString()))
                </div>
            </div>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.TechnologyName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TechnologyName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Priority)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Priority)
                </dd>
            </dl>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-1">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

